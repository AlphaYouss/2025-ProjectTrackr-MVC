@model ProjectTrackr.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Login</h1>

<h4>Login with your account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["Errors"] is List<string> errors)
        {
            <ul class="text-danger">
                @foreach (String error in errors)
                {
                    <li>@error</li>
                }
            </ul>
        }

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="usernameOrEmail" class="control-label">Username</label>
                <input asp-for="usernameOrEmail" class="form-control" required type="text" />
                <span asp-validation-for="usernameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">Password</label>
                <input asp-for="password" class="form-control" required type="password" id="password" />
                <span asp-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>