@model IEnumerable<ProjectTrackr.Models.Project>

@{
    ViewData["Title"] = "View";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Your Projects</h2>

    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Create Project
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No projects found.
    </div>
}
else
{
    <div class="row">

        @foreach (Project item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">

                    <div class="card-body">
                        <h5 class="card-title">@item.name</h5>

                        <p class="card-text">
                            @item.description
                        </p>

                        <ul class="list-unstyled small text-muted mb-3">
                            <li><strong>Owner:</strong> @item.owner.username (You)</li>
                            <li><strong>Created:</strong> @item.createdAt</li>
                        </ul>

                        <div class="d-flex justify-content-between">

                            <a class="btn btn-sm btn-outline-primary"
                               asp-action="Edit" asp-route-id="@item.id">
                                Edit
                            </a>

                            <a class="btn btn-sm btn-outline-secondary"
                               asp-action="Details" asp-route-id="@item.id">
                                Details
                            </a>

                            <a href="#"
                               class="btn btn-sm btn-outline-danger"
                               data-bs-toggle="modal"
                               data-bs-target="#deleteModal"
                               data-project-id="@item.id"
                               data-project-name="@item.name">
                                Delete
                            </a>

                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
}

@await Html.PartialAsync("Delete")

@section Scripts {
    <script>
        let deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            // Button that triggered the modal
            let button = event.relatedTarget;

            // Extract project ID and Name
            let projectId = button.getAttribute('data-project-id');
            let projectName = button.getAttribute('data-project-name');

            // Set modal content
            deleteModal.querySelector('#projectName').textContent = projectName || "this project";
            deleteModal.querySelector('#deleteProjectId').value = projectId;
        });
    </script>
}