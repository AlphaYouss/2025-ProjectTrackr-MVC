@model ProjectTrackr.Models.ViewModels.ProjectViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create project</h1>

<h4>Create your project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["Errors"] is List<string> errors)
        {
            <ul class="text-danger">
                @foreach (String error in errors)
                {
                    <li>@error</li>
                }
            </ul>
        }

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label">Project name</label>
                <input asp-for="name" class="form-control" type="text" required/>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label">Description</label>
                <textarea asp-for="description"
                          class="form-control"
                          rows="4"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>