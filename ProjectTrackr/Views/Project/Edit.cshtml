@model ProjectTrackr.Models.ViewModels.ProjectViewModel

@{
    ViewData["Title"] = "Edit Project";
}

<h1>Edit Project</h1>

@if (TempData["Errors"] is List<string> errors)
{
    <ul class="text-danger">
        @foreach (String error in errors)
        {
            <li>@error</li>
        }
    </ul>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="row">
    <div class="col-md-6">
        <form id="editForm" asp-action="Edit" method="post">
            <input type="hidden" asp-for="id" />

            <div class="form-group">
                <label asp-for="name" class="control-label">Project Name</label>
                <input asp-for="name" class="form-control" type="text" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="description" class="control-label">Description</label>
                <textarea asp-for="description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button id="saveBtn" type="submit" class="btn btn-primary" disabled>Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("editForm");
            const saveBtn = document.getElementById("saveBtn");

            const initialValues = Object.fromEntries(
                [...form.querySelectorAll("input, textarea")]
                    .map(el => [el.name, el.value])
            );

            function checkForChanges() {
                let changed = false;

                for (let el of form.querySelectorAll("input, textarea")) {
                    if (initialValues[el.name] !== el.value) {
                        changed = true;
                        break;
                    }
                }

                saveBtn.disabled = !changed;
            }

            form.addEventListener("input", checkForChanges);
            form.addEventListener("change", checkForChanges);

            form.addEventListener("reset", () => {
                saveBtn.disabled = true;
            });
        });
    </script>
}